<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.1.js"></script>
    @RenderSection("style", required: false)
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container">
            @Html.ActionLink("Player", "Index", "Players", new { }, new { @class = "fw-bold fs-1 nav-link" })

            @Html.ActionLink("Format", "Index", "Formats", new { }, new { @class = "fw-bold fs-1 nav-link" })
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <p class="text-center">&copy;@DateTime.Now.Year---Manjurul islam 1272178</p>
    </footer>
    @RenderSection("scripts", required: false)
    <script>
        $('#btnAdd').click(function (e) {
            e.preventDefault();
            var fS =
                $("#FC");
            $.ajax({
                url: "/Players/AddNewFormat",
                type: "GET",
                success: function (data) {
                    fS.append(data);
                }
            })
        })
        $(document).on("click", "#btnDF",
            function (e) {
                e.preventDefault();
                $(this).parent().parent().remove();
            });
    </script>
</body>
</html>
