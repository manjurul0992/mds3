@model mds3.Models.Format
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Formats", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();

    <div class="row">
        <div class="col">
            @Html.ValidationSummary(true, "", new { @class = "ext-danger" })



            <div class="row">
                @Html.LabelFor(x => x.FormatName, htmlAttributes: new { @class = "col-form-label col3" })
                <div class="col-9">
                    @Html.EditorFor(x => x.FormatName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.FormatName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-outline-primary">Save</button>



                </div>
            </div>


        </div>

    </div>


}

